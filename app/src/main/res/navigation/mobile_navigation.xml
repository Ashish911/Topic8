<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_update"
        android:name="com.example.topic8.ui.Update.UpdateFragment"
        android:label="Update"
        tools:layout="@layout/fragment_update" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.topic8.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.topic8.ui.dashboard.DashboardFragment"
        android:label="Add"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.topic8.ui.notifications.NotificationsFragment"
        android:label="Search"
        tools:layout="@layout/fragment_notifications" />
